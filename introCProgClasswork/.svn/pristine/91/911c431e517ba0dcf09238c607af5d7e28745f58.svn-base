int find_max(int array[], unsigned int length)
{
	int max = 0;
	for(int i=0; i<length; i++)
	{
		if(array[i]>max)
		{
			max = array[i];
		}
	}
	return max;
}

int remove_max(int array[], unsigned int length)
{
	int max = find_max(array,length);
	int j = 0;
	for(int i=0; i<length; i++)
	{
	if(array[i] == max)
	{
	j++;	
	}
	array[i] = array[j];
	//printf("%d\n",j);
	j++;
	}
}

void init_board(char board[3][3])
{
	for(int i=0; i<4; i++)
	{
		for(int j=0; j<4; j++)
		{
			board[i][j] = '*';
		}
	}
}	

unsigned int place_piece(char board[3][3], char player, unsigned int row, unsigned int col)
{
	if(board[row][col] == '*')
	{
		board[row][col] = player;
		return 1;
	}
	else
	{
		return 0;
	}
}

void print_tic_tac_toe_board( char board[3][3] )
{
	unsigned int i, j;
	for(i=0;i<3;i++)
	{
		for(j=0;j<3;j++)
		{
			printf("%c ",board[i][j]);
		}
		printf("\n");
	}
}

